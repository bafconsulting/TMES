<div  style="clear: both;" >
    <span>Стандартная часть</span>
     @foreach (var Work in Model.CommonWorks)
    {
        <div class="DepartmentLine">
            <span style="white-space:nowrap" class="DepartmentName">@Work.Department.Name</span>
            <div style="margin-left: 100px; display:block; width: 1100px; height: 40px;  padding: 0px;" >
                <div class="Work ui-widget-content draggable">
                <span class="DurationText" style="display: inline-block; margin: 0px;" >@Work.Duration.ToString("0")</span>
                <input class="Color" value="@Work.Department.CssColor" />
                <input class="Department" value="@Work.Department" />
                <input class="Duration" value="@Work.Duration" />
                <input class="Id" value="@Work.Id" />                  
                </div>
            </div>
        </div>
     
    }
    <br />

    <span>Подготовительные работы</span>
    @foreach (var Work in Model.PreparationWorks)
    {
        <div class="DepartmentLine">
            <span class="DepartmentName" style="white-space:nowrap">@Work.Department.Name</span>
            <div style="margin-left: 100px; display:block; width: 1100px; height: 40px;  padding: 0px;" >
                <div class="Work ui-widget-content draggable">
                <span class="DurationText" style="display: inline-block; margin: 0px;" >@Work.Duration.ToString("0")</span>
                <input class="Color" value="@Work.Department.CssColor" />
                <input class="Department" value="@Work.Department" />
                <input class="Duration" value="@Work.Duration" />
                <input class="Id" value="@Work.Id" />                  
                </div>
            </div>
        </div>
     
    }


    <br />
    <span>Основные работы</span>
    @foreach (var Work in Model.Works)
    {
        <div class="DepartmentLine">
            <span class="DepartmentName">@Work.Department.Name</span>
            <div style="margin-left: 100px; display:block; width: 1100px; height: 40px;  padding: 0px;" >
                <div class="Work ui-widget-content draggable">
                <span class="DurationText" style="display: inline-block; margin: 0px;" >@Work.Duration.ToString("0")</span>
                <input class="Color" value="@Work.Department.CssColor" />
                <input class="Department" value="@Work.Department" />
                <input class="Duration" value="@Work.Duration" />
                <input class="Id" value="@Work.Id" />
                   
                </div>
            </div>
        </div>
    }
