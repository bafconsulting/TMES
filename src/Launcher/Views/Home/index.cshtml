<script src="@Url.Content("~/../controls/calendarGraph/scripts/init.js")" type="text/javascript"></script>
<script src="@Url.Content("~/../controls/gantt/Scripts/init.js")" type="text/javascript"></script>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="NavigatorApplication">
    
    <div class="NavigatorInput">
        Заказ: <input id="RequestedOrderInput"
                      name="Order"
                      type="text" />
    </div>
    <div class="HLButtonStatic" onclick="Build()">Построить</div>
    <div class="HLButtonStatic" onclick="Options()">Опции</div>
    <div>Без учета стандартных операций<input id="checkBoxStandartWorks" type="checkbox" /></div>
</div>

<div id="gantt_here" style='width:100%; height:70%; overflow-x: hidden; overflow-y: hidden'></div>


<div style="height: 30%; display: block; float: left; width: 100%">
  <div class="NavigatorExploder">
   <span class="NavigatorHeader">Обозреватель заказа</span>
  
      @Html.Partial("~/Views/Home/_Exploder.cshtml") 
  
  </div>

  <div class="NavigatorWorkDetail"  >
    <span class="NavigatorHeader">Детализация работ</span>
      @Html.Partial("~/Views/Home/_WorkDetail.cshtml") 
  
  </div>
</div>

<div style="display: none">
    <div id="OptionsDialog" title="Стандартные работы">

        <table id="stWork" class="MinorTable">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Удалить</th>
                    <th>Наименование</th>
                    <th>Длительность</th>
                </tr>
            </thead>
        </table>
        <div style="margin-top: 30px">
            Добавить стандартные работы
            <table>
                <tr>
                    <td>Наименование</td>
                    <td><input type="text" id="stWorkNaim" /></td>
                </tr>
                <tr>
                    <td>Длительность</td>
                    <td><input type="text" id="stWorkDuration" />/час</td>
                </tr>
            </table>

            <input type="button" id="addStandartWork" value="Добавить" />
        </div>
    </div>
</div>
<script type="text/javascript">
    // Скрипты выносим во Frontend/controls/%имяконтрола%/init.js
</script>